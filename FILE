/*==========================#4 READ Number file W Structure==========================*/
struct noteBook
{
	//int calend;
	
	int digit;
};
int main()
{
	struct
		noteBook
		itemInList[10] = { 0 }; // declate Array - Print 2/more Variables -->itemInList: var Access evth in noteBook (struct)
	FILE* file = NULL;
	//char str[40]; // variable holds Scaned value
	int
		i = 0,
		j = 0;

	file = fopen("number.txt", "r");
	if (file != NULL)// OR (file != 0) --> not fail
	{
		printf("success opened file\n");
		for (i = 0; i < 10 && !feof(file); i++)
		{
			fscanf(file, "%d", &itemInList[i].digit);// Get Value
		}
		
		/*while (i--) // Print Reverse Order -- b/c i-- From END to BEGINING 
		{
			printf("%d\n", itemInList[i].digit);
		}*/
		for (j = 0; j < i; j++)
		{
			printf("%d ", itemInList[j].digit);
			if (j == 2)
			{
				printf("\n");
			}
		}
		fclose(file); // close the file After used
	}
	else
	{
		printf("cannot open file\n");
	}
	return 0;
}
